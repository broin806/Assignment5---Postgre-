<div class="row">
<div class="col-md-12">
<h2>Employees <a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a></h2>
<hr />
{{!-- bootstrap classes --}}
 <div class="table-responsive">
            <table class="table">
                <thead>
                    {{!-- table contains 8 columns with respective details --}}
                    <th >Employee&nbsp;Num</th>
                    <th>Full&nbsp;Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Manager&nbsp;ID</th>
                    <th>Status</th>
                    <th>Department</th>
                    <th>Hired&nbsp;On</th>
                </thead>
         <tbody>
  {{#each employees}}
                <tr>
                    {{!-- iterate over each resoective element --}}
                    <td>{{employeeNum}}</td>
                    <td><a href="/employee/{{employeeNum}}">{{firstName}}&nbsp;{{lastName}}</a></td>
                    <td><a href="mailto:{{email}}">{{email}}</a></td>
                    <td>{{addressStreet}} {{addressCity}} {{addressState}} {{addressPostal}}</td>
                    <td><a href="/employees?manager={{employeeManagerNum}}">{{employeeManagerNum}}</a></td>
                    <td><a href="/employees?status={{status}}">{{status}}</a></td>
                    <td><a href="/employees?department={{department}}">{{department}}</a></td>
                    <td>{{hireDate}}</td>
                    <td><a class="btn btn-danger" href="/employees/delete/{{this.employeeNum}}">remove</a></td>
                </tr> 
                {{/each}}
                </tbody>
            </table>
         </div>
    </div>
{{!-- unless helper --}}
{{#unless employees}}

{{!-- display the "message" if there are no employees --}}
<div class="col-md-12 text-center">
<strong>{{message}}</strong>
</div>

{{/unless}}
</div>
